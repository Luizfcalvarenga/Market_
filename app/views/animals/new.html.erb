

<div class="container mt-5">
  <div class="list-banner mt-5">
    <h1 class='text-center'>Add an animal for adoption</h1>
  </div>
  <div class="row">
    <div class="col-12">
      <%= simple_form_for(@animal) do |f| %>
        <%= f.input :name, placeholder: 'Add the little friend name' %>
        <%= f.input :gender, collection: ['Male', 'Female'], default: 'Female' %>
        <%= f.input :age, collection: 0..30, default: 0 %>
        <%= f.input :size,  collection: ['Small', 'Medium', 'Large', 'X-large'], default: 'Small' %>
        <%= f.input :specie, collection: ['Dog', 'Cat', 'Bird', 'Turtle', 'Fish', 'Other'], default: 'Dog' %>
        <%= f.input :address, placeholder: 'Tell us where you found our friend / City/State and Country' %>
        <%= f.input :description, placeholder: 'Tell more about our little / If other specie specifie here' %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }%>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back', animals_path, class: 'btn btn-success mt-3' %>
</div>
