<div class='container pt-5'>
  <h2><%= @animal.name%></h2>
  <h3>
      <% if @adopted.empty? %>
        <%= "Not adopted" %>
      <% else %>
        <%= "Adopted" %>
      <% end %>
  </h3>
  <% if @animal.photos.attached? %>

      <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <% @animal.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 150, width: 150, crop: :fill, class: 'd-block w-100'  %>
            <% end %>
          </div>
        </div>
      </div>

  <% end %>
  <p class='pt-5'> <strong>Size:</strong> <%= @animal.size%> | <strong>Gender:</strong> <%= @animal.gender %></p>
  <p> <strong>Description:</strong> <%= @animal.description %></p>

  <p><strong>Where am I:</strong> <%= @animal.address %></p>
  <p><strong>Contact:</strong> <%= @animal.user.email %></p>

  <% if current_user == @animal.user %>
    <div>
      <% @animal.orders.each do |order| %>
      <p> Someone is interested in adopting <%= @animal.name %>, send an email to <%= order.user.email %> </p>
        <%= simple_form_for [ order ], remote: true do |f| %>
          <%= f.input :adopted, as: :boolean, checked_value: true, unchecked_value: false %>
          <%= f.submit %>
        <% end %>
        <%= link_to "Remove order",
                  destroy_path(order),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
      <% end %>
    </div>
  <% end %>
  <%= link_to 'Back', animals_path, class: 'btn btn-success mt-3' %>
  <% if policy(@animal).edit? %>
    <%= link_to 'Edit', edit_animal_path(@animal), class: 'btn btn-success mt-3' %>
  <% end %>

  <% if @adopted == false || current_user != @animal.user %>
    <%= link_to 'I`m interested', animal_orders_path(@animal), method: :post, class: 'btn btn-success mt-3' %>
  <% end %>
  <% if policy(@animal).edit? %>
    <%= link_to 'Delete', animal_path(@animal), method: :delete, data: { confirm: "Are you sure you want to remove #{@animal.name} from adoption list"}, class: 'btn btn-danger mt-3' %>
  <% end %>

</div>
