<div class='container'>
  <h2><%= @animal.name%></h2>
  <h3 class='pb-3'><% if  @order %>
        <%= "adopted" %>
      <% else %>
        <%= "Not adopted" %>
      <% end %>
  </h3>
  <% if @animal.photos.attached? %>

    <% @animal.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 150, width: 150, crop: :fill %>
    <% end %>
  <% end %>
  <p class='pt-5'> <strong>Size:</strong> <%= @animal.size%> | <strong>Gender:</strong> <%= @animal.gender %></p>
  <p> <strong>Description:</strong> <%= @animal.description %></p>

  <p><strong>Where am I:</strong> <%= @animal.user.address %></p>
  <p><strong>Contact:</strong> <%= @animal.user.email %></p>
  <%= link_to 'Back', root_path, class: 'btn btn-success mt-3' %>
  <%= link_to 'Edit', edit_animal_path(@animal), class: 'btn btn-success mt-3' %>
</div>
